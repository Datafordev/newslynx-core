{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "TenderEngine Unified Ingest Schema, V1.",
    "type": "object",
    "properties": {
        "name": {
           "description": "The display name of this sous-chef",
           "type": "string"
        },
        "description": {
            "description": "A description of the purpose this sous-chef serves.",
            "type": "string"
        },
        "runs": {
            "description": "Either an absolute path to an _executable_ script, or a python module which inherits from core `newslynx.SousChef` class. If an executable, it must be accessible by the machine that runs the sous chef.",
            "type": "string"
        },
        "creates": {
            "description": "What does this sous-chef create? Can be `event, `thing`, `tag`, `metric`, `series`",
            "enum": [
                "event",
                "thing",
                "tag",
                "metric",
                "series"
            ]
        },
        "options": {
            "description": "Options this sous-chef accepts.",
            "additionalProperties": {"$ref": "#/definitions/optionItem"}
        }
    },
    "required": ["name", "description", "runs", "creates", "options"],
    "definitions": {
        "optionItem": {
            "description": "An option for the sous-chef",
            "type": "object",
            "required": ["type"],
            "properties": {
                "type": {
                    "description": "The type of option.",
                    "type": "string",
                    "enum": ["boolean", "datetime", "searchstring", "text", "number", "list"]
                },
                "default":{
                    "description": "The default value for this option.",
                    "type": ["string", "number", "boolean", "null"]
                },
                "options": {
                    "description": "If the option type is 'list', a list of valid options for the item.",
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "required": {
                    "description": "Whether or not this option item is required",
                    "type": "boolean"
                },
                "help": {
                    "description": "Placehold / help reference for this option.",
                    "type": "object",
                    "required": ["placeholder"],
                    "properties": {
                        "placeholder": {
                            "description": "The placeholder/example text for this option.",
                            "type": "string"
                        },
                        "link" : {
                            "description": "A link for more details about this option.",
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}